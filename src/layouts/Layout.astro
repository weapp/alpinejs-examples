---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-row">
		<main class="absolute w-full h-full space-y-40">
			<div class="relative" id="home">
				<div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 dark:opacity-20">
					<div class="blur-[106px] h-56 bg-gradient-to-br from-purple-700 to-purple-400 dark:from-blue-700">A</div>
					<div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600">b</div>
				</div>
			</div>
		</main>
		<slot />
	</body>
</html>
<style is:global>
</style>



<style is:global>
    [x-cloak] {display: none;}

    button:not(:disabled),
    [type="button"]:not(:disabled),
    [type="reset"]:not(:disabled),
    [type="submit"]:not(:disabled),
    .btn {
        cursor: default;
    }

    .btn {
        @apply px-4 py-2 font-semibold text-white  rounded select-none  disabled:text-stone-100  focus:outline-none focus:ring focus:ring-indigo-300;
        @apply bg-indigo-600 disabled:bg-stone-500 hover:bg-indigo-500 disabled:hover:bg-stone-500 active:bg-indigo-700
    }

	.textarea {
		@apply w-full px-4 py-2 font-semibold text-indigo-800 border-2 border-indigo-100 rounded select-none bg-indigo-50 disabled:bg-stone-500 hover:bg-indigo-50 disabled:hover:bg-stone-500 disabled:text-stone-100 active:bg-indigo-200 focus:outline-none focus:ring focus:ring-indigo-300
	}

	.input {
		@apply w-full px-4 py-2 font-semibold text-indigo-800 border-2 border-indigo-100 rounded select-none bg-indigo-50 disabled:bg-stone-500 hover:bg-indigo-50 disabled:hover:bg-stone-500 disabled:text-stone-100 focus:outline-none focus:ring focus:ring-indigo-300
	}

	.select {
		@apply w-full px-4 py-2 text-indigo-800 bg-indigo-100 rounded select-none font-semibold disabled:bg-stone-500 hover:bg-indigo-50 disabled:hover:bg-stone-500 disabled:text-stone-100 active:bg-indigo-200 focus:outline-none focus:ring focus:ring-indigo-300
	}
</style>

