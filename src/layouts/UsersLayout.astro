---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body
		class="bg-[#C6BECF] text-[#302839] h-full"
		style="
			background: url('/') repeat repeat 0px 0px;
			background-size: 40%;
		"
	>
		<main class="absolute z-10 w-full h-full space-y-40">
			<div class="relative" id="home">
				<div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 dark:opacity-20">
					<div class="blur-[106px] h-56 bg-gradient-to-br from-purple-700 to-purple-400 dark:from-blue-700">A</div>
					<div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600">b</div>
				</div>
			</div>
		</main>
		<div class="relative z-20 flex flex-col items-center justify-between h-full">
			<div></div>
			<main class="
				w-[60rem]
				m-3
				h--[34rem]
				mx-auto
				p-3
				flex
				gap-3
				bg-[#e0dce5]
				bg-opacity-50
				backdrop--filter
				backdrop--blur
				rounded-lg
				border
				border-[#FFFFFF70]
				[box--shadow:0_4px_30px_rgba(0,0,0,0.1)]
				"
			>
				<slot />
				<!-- 
				#e0dce5
				#C6BECF
				#9585A3
				#645574
				#4A3E56
				#302839
				-->
			</main>
			<div></div>
		</div>
	</body>
</html>

